<%- include('partials/header') %>

<title>puddle | Forgot password</title>

<header>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <form class="forgotform mt-5 rounded p-5 col-lg-6">
                <h1 class="lead text-white">Enter your email</h1>
                <label for="email" class="text-white">Email:</label>
                <input type="email" class="email form-control" id="email" required placeholder="Enter your email">
                <button class="btn m-2 btn-success">Get reset instructions</button>
                <a href="/login" class="btn m-2 btn-outline-danger">Back</a>
            </form>
        </div>
    </div>
</header>

<script>
    const form = document.querySelector('.forgotform');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const email = form.email.value;

        try {
        const res = await fetch('/forgot', {
            method: 'POST',
            body: JSON.stringify({ email }),
            headers: { 'Content-Type' : 'application/json' }
        });
        } catch (err) {
            console.log(err);
        }
    })
</script>